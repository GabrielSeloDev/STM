{
    "name": "selo-task-manager",
    "version": "1.0.1",
    "description": "Task Manager Desktop Application",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "start": "vite",
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "electron:build": "vite build && electron-builder"
    },
    "keywords": [
        "electron",
        "task-manager",
        "productivity"
    ],
    "author": "Gabriel Selo",
    "license": "MIT",
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/utilities": "^3.2.2",
        "better-sqlite3": "^12.6.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.2",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.28.1",
        "vite-plugin-electron-renderer": "^0.14.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.gabrielselo.stm",
        "productName": "Selo TaskManager",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "assets/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "assets/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        }
    }
}